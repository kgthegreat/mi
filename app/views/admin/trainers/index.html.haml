.page-header
  All trainers

=link_to "Add a trainer", new_admin_trainer_path, :class => "btn btn-primary"

.well
  - @trainers.each do |trainer|
    .row
      .span2.label.label-important= trainer.email
      .span2
        .row
          - trainer.domains.each do |domain|
            .span.label.label-success= domain.name

      .pull-right.btn-group
        = link_to "manage timeslots", admin_trainer_timeslots_path(trainer),:class => "btn btn-primary"
        = link_to "edit domains", edit_admin_trainer_path(trainer),:class => "btn"
        = link_to "delete", admin_trainer_path(trainer), :confirm=> "Are you sure", :method => "delete", :class => "btn"

    .well
      - trainer.timeslots.each do |timeslot|
        .row
          .span2= l timeslot.date, :format => :slot if timeslot.date
          .span1= l timeslot.start_time, :format => :slot if timeslot.start_time
          .span1= l timeslot.end_time, :format => :slot if timeslot.end_time
          .span1= timeslot.interview_type

    %br

